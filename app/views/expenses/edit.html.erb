<%= render 'shared/banner', name: "Edit #{@group.name} Transaction - #{@expense.name}", amount: nil%>
<% if @expense.errors.any? %>
  <div class="alert alert-danger p-3">
    <h6><%= pluralize(@expense.errors.count, "error") %> prohibited this post from being saved:</h6>

    <ul>
    <% @expense.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="card m-3">
  <div class="card-body">
    <%= form_with model: @expense, url: group_expense_path(@group, @expense), class: 'flex flex-col items-center w-6/12 mx-auto' do |form| %>
      <%= render 'expenses/form', form: form%>
      <div class="actions">
        <%= form.submit "Update", class: "btn btn-success w-100 mt-2" %>
      </div>
    <%end%>
  </div>
</div>